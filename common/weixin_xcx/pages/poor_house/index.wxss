/* pages/poor_house/index.wxss */
.weui-label{
    font-size: 14px;
}

.wrap-content{
    width:100vw;
    height:100vh;
    display:flex;
    justify-content:center;
    align-items:center;
}

.content-form{
    width:90vw;
    height:50vh;
    background-color:#ffffff;
    box-shadow: 0 3px 8px 0 rgba(173,173,173,0.30);
    border-radius: 2px;
    box-sizing: border-box;
    padding:0 2vw;
    display:flex;
    justify-content:center;
    align-items:center;
}

form{
    display: block;
}

.top-info{
    position:fixed;
    top:0;
    left:0;
    right:0;
    box-sizing: border-box;
    height:45px;
    background-color:#ffffff;
    z-index:99;
    box-shadow: 0 3px 8px 0 rgba(173,173,173,0.30);
    padding:14px 15px 10px;
    color:#999;
    font-size:13px;
}

.top-info image{
    width:45px;
    height:45px;
    position: absolute;
    bottom:0;
    right:10px;
}

form{
    display: block;
}

/*搜索模态框-start*/
.search-modal{
    width:90vw;
    height:50vh;
    position:fixed;
    top:20vh;
    left:5vw;
    z-index:9999;
    background: #FFFFFF;
    border-radius: 4px;
    display:flex;
    justify-content:center;
    align-items:center;
    box-sizing: border-box;
    padding: 0 2vw;
}

.search-modal-shade{
    position:fixed;
    z-index:9998;
    top:0;
    bottom:0;
    left:0;
    right:0;
    background-color:#000000;
    opacity: 0.56;
}
/*搜索模态框-end*/