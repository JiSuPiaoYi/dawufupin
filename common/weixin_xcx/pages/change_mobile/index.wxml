<view class="page">
    <view class="page__bd">
        <view class='wrap-content'>
            <view class='content-form'>
                <form bindsubmit="formSubmit">
                    <!-- <view class="weui-cells__title">表单</view> -->
                    <view class="weui-cells weui-cells_after-title">
                        <view class="weui-cell weui-cell_input">
                            <view class="weui-cell__hd">
                                <view class="weui-label">原密码</view>
                            </view>
                            <view class="weui-cell__bd">
                                <input class="weui-input" name='old_password' placeholder="请输入原密码"/>
                            </view>
                        </view>
                        <view class="weui-cell weui-cell_input">
                            <view class="weui-cell__hd">
                                <view class="weui-label">新密码</view>
                            </view>
                            <view class="weui-cell__bd">
                                <input class="weui-input" name='new_password' password='true' placeholder="请输入新密码"/>
                            </view>
                        </view>
                        <view class="weui-cell weui-cell_input">
                            <view class="weui-cell__hd">
                                <view class="weui-label">确认新密码</view>
                            </view>
                            <view class="weui-cell__bd">
                                <input class="weui-input" name='qr_new_password' password='true' placeholder="请确认新密码"/>
                            </view>
                        </view>
                    </view>
                    <view class="weui-btn-area">
                        <button class="weui-btn" type="primary" formType="submit">确定修改</button>
                    </view>
                </form>
            </view>
        </view>
    </view>
</view>