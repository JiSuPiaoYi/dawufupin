<view class="page">
    <view class="page__bd">
        <view class="user-info">
            <view class="userinfo">
                <block>
                    <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
                    <text class="userinfo-nickname">{{user_info.department_name}}-{{user_info.name}}</text>
                </block>
            </view>
        </view>
        <view class="user-action">
            <view class="weui-cells__title" style='padding:10px;'>操作</view>
            <view class="weui-cells weui-cells_after-title">
                <navigator url="/pages/change_mobile/index" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                    <view class="weui-cell__bd">修改密码</view>
                    <view class="weui-cell__ft weui-cell__ft_in-access"></view>
                </navigator>
                <view class="weui-cell weui-cell_access" bindtap='relieve_bind'>
                    <view class="weui-cell__bd">退出登录</view>
                </view>
            </view>
        </view>
    </view>
</view>

