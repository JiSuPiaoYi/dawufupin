/**app.wxss**/
@import 'style/weui.wxss';

page {
    background-color:#F8F8F8;
    font-size:16px;
    font-family:-apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}

.blue-btn{
  background:#74ACF4;
}

.gray-btn{
    background-image: linear-gradient(-90deg, #BCBCBC 3%, #D0D0D0 100%);
}

.red-btn{
    background-image:linear-gradient(90deg, #fb7ea4 0%, #fba2a3 100%);
    box-shadow:0 6rpx 14rpx 0 rgba(243, 125, 153, 0.31);
}

.green-btn{
    color:#ffffff;
    background-color: #2ba328;
}

.diy-btn{
    border-radius:200rpx;
    width:80%;
    height:88rpx;
    line-height:88rpx;
    text-align:center;
    color:#fff;
}

button::after {
  border: 0;
} 